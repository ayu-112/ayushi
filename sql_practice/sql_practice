ANS 1: CREATE TABLE student ( id INT AUTO_INCREMENT PRIMARY KEY, name VARCHAR(50), age VARCHAR(100), email VARCHAR(50));


ANS 2: CREATE TABLE course ( course_id INT AUTO_INCREMENT PRIMARY KEY, title VARCHAR(100) NOT NULL, credits INT NOT NULL );

ANS 3: ALTER TABLE student ADD grade VARCHAR(50);

ANS 4: ALTER TABLE student MODIFY COLUMN email INT(50);

ANS 5: CREATE TABLE enrollments (
    student_id INT,
    course_id INT,
    date DATE,

    FOREIGN KEY (student_id) REFERENCES student(id),
    FOREIGN KEY (course_id) REFERENCES course(course_id)
);

ANS 6: ALTER TABLE course DROP COLUMN credits;

ANS 7: DROP TABLE enrollments;

ANS 8: ALTER TABLE student RENAME TO learners;

ANS 9: CREATE INDEX learners_email ON learners(email);

ANS 10: CREATE TABLE departments (dept_id INT AUTO_INCREMENT PRIMARY key,
                          dept_name VARCHAR(20) );

